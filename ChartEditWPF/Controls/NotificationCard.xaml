<UserControl x:Class="ChartEditWPF.Controls.NotificationCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChartEditWPF.Controls"
             xmlns:vm="clr-namespace:ChartEditWPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="65" d:DesignWidth="340" Height="70" Width="340" MaxWidth="500" MinWidth="300"  Background="Transparent"
             d:DataContext="{d:DesignInstance Type=vm:NotificationContent}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="{Binding Background}" CornerRadius="5,5,0,0" d:Background="Green" Width="auto" Height="5"/>
        
        
        <StackPanel Grid.Row="1" Background="White" >
            <TextBlock Margin="10,10,0,0" Text="{Binding Title}" d:Text="Success" FontSize="14"/>
            <TextBlock Margin="10,5,0,0" Text="{Binding Message}" d:Text="Message" FontSize="14" FontWeight="Light"/>
        </StackPanel>
    </Grid>
</UserControl>
