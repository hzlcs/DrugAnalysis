<UserControl
    x:Class="ChartEditWPF.Controls.QualityRangeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChartEditWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ChartEditWPF.ViewModels"
    d:DataContext="{d:DesignInstance vm:QualityRangeControlViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <local:BindingProxy x:Key="bind" Data="{Binding}" />
    </UserControl.Resources>
    <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Rows}">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding Areas[0]}" Header="{Binding Source={StaticResource bind}, Path=Data.Columns[0]}" />
            <DataGridTextColumn Binding="{Binding Areas[1]}" Header="{Binding Source={StaticResource bind}, Path=Data.Columns[1]}" />
            <DataGridTextColumn Binding="{Binding Areas[2]}" Header="{Binding Source={StaticResource bind}, Path=Data.Columns[2]}" />
            <DataGridTextColumn Binding="{Binding Average}" Header="AVG" />
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
