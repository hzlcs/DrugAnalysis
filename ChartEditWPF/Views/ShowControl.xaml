<UserControl
    x:Class="ChartEditWPF.Views.ShowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChartEditWPF.Views"
    xmlns:vm="clr-namespace:ChartEditWPF.ViewModels"
    
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance vm:ShowControlViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="500" />
        </Grid.ColumnDefinitions>
        <local:ChartEditControl DataContext="{Binding}" Grid.Column="0" />
        <local:ChartDataControl DataContext="{Binding}" Grid.Column="1" />
    </Grid>
</UserControl>
